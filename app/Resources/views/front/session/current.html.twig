<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
		    <h2>En ce moment</h2>
		    <hr class="star-primary">
		</div>
	</div>
</div>

<div class="slider-pro">
    <div class="sp-slides">
    	{% for session in sessions %}
	        <div class="sp-slide">
	        	<div class="row">
	        		<div class="col-xs-12 col-sm-7">
	        			<img class="img-thumbnail" style="transform: rotate( {{ random(['-2', '-1', '1', '2']) }}deg )" src="{{ vich_uploader_asset(session, 'pictureFile') }}"/>
	        		</div>

	        		<div class="col-xs-12 col-sm-5">
	        			<div class="session-infos">
	        				<div class="text-center">
	        					<h4>
	        						{{session.name}}
	        					</h4>
	        				</div>

	        				<ul class="session-info-list">
	        					<li>
									<span class="info-title">
										localisation :
									</span>
									<span class="info-number">{{ session.city }}</span>
	        					</li>

	        					<li>
									<span class="info-title">
										d√©bute le :
									</span>
									<span class="info-number">{{session.startAt|date("d/m/Y") }}</span>
	        					</li>

	        					<li>
	        						<span class="info-title">
										nombre d'espions :
									</span>
									<span class="info-number">{{ session.sessionUsers|length }}</span>
	        					</li>
	        				</ul>

							<div class="text-center">
								<a href="{{ url('session_show', {'id' : session.id}) }}" class="btn btn-secondary btn-lg">Voir la session</a>
							</div>
	        			</div>
	        		</div>
	        	</div>
	        </div>
        {% endfor %}
    </div>
</div>
