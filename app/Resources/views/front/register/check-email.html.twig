{% trans_default_domain 'FOSUserBundle' %}

{% extends 'front/layout.html.twig' %}

{% block body %}
	<div class="container container-main">
		<div class="col-xs-12 col-md-6 col-md-offset-3">
			<div class="box marged-top">
				<div class="box__head">
					<h1>
						<div class="text-center">
							Verification
						</div>
					</h1>
				</div>

				<div class="box__content">
					<p>
						Un email de vérification vous a été envoyé à l'adresse <b>{{ user.email }}</b>.
					</p>

					<p>
						Pour vous connecter, veuiller activer votre compte en cliquant sur le lien contenu dans le mail.
					</p>

					<p>
						A tout de suite !
					</p>

					<div class="text-right marged-top">
						<p>L'équipe de StreetHunt</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
