{% extends 'admin/layout.html.twig' %}

{% block body %}

	<a href="{{ url('admin_user_new') }}" class="btn btn-primary btn-xs">nouvel utilisateur</a>

    <table class="dynatable table table-striped table-bordered table-hover" data-dynatable>
  		<thead>
    		<tr>
    			<th>ID</th>
    			<th>Prénom</th>
    			<th>Nom</th>
      			<th>Pseudo</th>
      			<th>E-mail</th>
      			<th>Activé ?</th>
      			<th>Groupes</th>
      			<th>Actions</th>
    		</tr>
  		</thead>

  		<tbody>
  			{% for user in users %}
	  			<tr>
	  				<td>{{ user.id }}</td>
	  				<td>{{ user.firstname }}</td>
	  				<td>{{ user.lastname }}</td>
	  				<td>{{ user.username }}</td>
	  				<td>{{ user.email }}</td>
	  				<td>{{ user.enabled }}</td>
	  				<td>{% for role in user.roles %} {{ role }}, {% endfor %}</td>
	  				<td><a href="{{ url('admin_user_edit', {'id' : user.id }) }}" class="btn btn-xs btn-default">edit</a></td>
	  			</tr>
    		{% endfor %}
  		</tbody>
	</table>

{% endblock %}
