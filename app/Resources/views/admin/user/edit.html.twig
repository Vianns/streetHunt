{% extends 'admin/layout.html.twig' %}

{% block body %}
    <h1>{{ user }}</h1>

    <div class="admin-user">
        {% include 'admin/user/form.html.twig' %}
    </div>

    <h2>Adresses</h2>

    <a href="{{ url('admin_address_new', {'id' : user.id }) }}" class="btn btn-default btn-xs marged-bottom">
        Ajouter une adresse
    </a>

    {{ render(url('admin_user_address_list', {'id' : user.id })) }}

    <div class="row">
        {% for address in user.addresses %}
            <div class="col-xs-12 col-sm-4">
                {% include 'admin/address/thumb.html.twig' %}
            </div>
        {% endfor %}
    </div>

{% endblock %}
